<div class="panel-body">
	<% if @user %>
  		<h1> Welcome <%= @user.name %> to the second version of this site </h1>

	    <div class="row">
	        <div class="col-lg-8">
	            <div class="panel panel-default">
	                <div class="panel-heading">
	                    <i class="fa fa-bar-chart-o fa-fw"></i> Stock Chart
	                    <div class="pull-right">
	                        <div class="btn-group">
	                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
	                                Actions
	                                <span class="caret"></span>
	                            </button>
	                            <ul class="dropdown-menu pull-right" role="menu">
	                                <li><a href="#">Action</a>
	                                </li>
	                                <li><a href="#">Another action</a>
	                                </li>
	                                <li><a href="#">Something else here</a>
	                                </li>
	                                <li class="divider"></li>
	                                <li><a href="#">Separated link</a>
	                                </li>
	                            </ul>
	                        </div>
	                    </div>
	                </div>
	                <!-- /.panel-heading -->
	                <div class="panel-body">
	                    <div id="morris-area-chart"></div>
	                </div>
	                <!-- /.panel-body -->
	            </div>
	            <!-- /.panel -->
	            <div class="panel panel-default">
	                <div class="panel-heading">
	                    <i class="fa fa-bar-chart-o fa-fw"></i> Bar Chart Example
	                    <div class="pull-right">
	                        <div class="btn-group">
	                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
	                                Actions
	                                <span class="caret"></span>
	                            </button>
	                            <ul class="dropdown-menu pull-right" role="menu">
	                                <li><a href="#">Action</a>
	                                </li>
	                                <li><a href="#">Another action</a>
	                                </li>
	                                <li><a href="#">Something else here</a>
	                                </li>
	                                <li class="divider"></li>
	                                <li><a href="#">Separated link</a>
	                                </li>
	                            </ul>
	                        </div>
	                    </div>
	                </div>
	                <!-- /.panel-heading -->
	                <div class="panel-body">
	                    <div class="row">
	                        <div class="col-lg-12">
	                            <div id="morris-bar-chart"></div>
	                        </div>
	                        <!-- /.col-lg-8 (nested) -->
	                    </div>
	                    <!-- /.row -->
	                </div>
	                <!-- /.panel-body -->
	            </div>
	            <!-- /.panel -->
	            
	        </div>
	        <!-- /.col-lg-8 -->
	        <div class="col-lg-4">
	        	<div class="panel panel-default">
	                <div class="panel-heading">
	                    <i class="fa fa-facebook-square fa-fw"></i> Post a Status
	                </div>
	                <div class="panel-body">
	                    <%= form_tag("/welcome", method: "post") do %>
                        <div class="input-group custom-search-form">
                            <%= text_field_tag 'status', nil, placeholder: "Status", class: "form-control" %>
                            <span class="input-group-btn">
                                <%= button_tag(type: "submit", class: "btn btn-default") do %>
                                Post
                            <% end %>
                            </span>
                        </div>
                    <% end %>
	                </div>
	                <div class="panel-footer">
	                	<strong>Current Status</strong>: <%= "#{@myself.first['message']}" %>
	                </div>
	                <!-- /.panel-body -->
	            </div>
	        	<div class="panel panel-default">
	                <div class="panel-heading">
	                    <i class="fa fa-bar-chart-o fa-fw"></i> Donut Chart Example
	                </div>
	                <div class="panel-body">
	                    <div id="morris-donut-chart"></div>
	                    <a href="#" class="btn btn-default btn-block">View Details</a>
	                </div>
	                <!-- /.panel-body -->
	            </div>
	            <div class="panel panel-default">
	                <div class="panel-heading">
	                    <i class="fa fa-list-alt fa-fw"></i> News Feed
	                </div>
	                <!-- /.panel-heading -->
	                <div class="panel-body">
	                    <div class="list-group">
	                    	<% @posts.each do |post| %>

	                    		<% unless post['message'].blank?%>
		                    		<p class="list-group-item">
		                    			<% if post['type'] == 'photo' %>
		                    				<i class="fa fa-camera-retro fa-fw"></i>
	                    				<% elsif post['type'] == 'video' %>
	                    					<i class="fa fa-play-circle fa-fw"></i>
	                    				<% else %>
		                    				<i class="fa fa-comment fa-fw"></i>
	                    				<% end %>
	                    				<%= post['from']['name'] %>: <%= post['message'] %>
		                    		</p>
	                    		<% end %>
	                    	<% end%>
	                    </div>
	                    <!-- /.list-group -->
	                    <a href="https://www.facebook.com" class="btn btn-default btn-block"><i class="fa fa-facebook"></i> View On Facebook</a>
	                </div>
	                <!-- /.panel-body -->
	            </div>
	            <!-- /.panel -->
	        </div>
	        <!-- /.col-lg-4 -->
	    </div>
    <% else %>
  		<h1> Go sign in </h1>
  		<a class="btn btn-block btn-social btn-facebook">
        	<i class="fa fa-facebook"></i> Sign in with Facebook
    	</a>
  		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
	<% end %>  
</div>

